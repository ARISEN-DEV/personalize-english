---
import { Image } from "astro:assets";
import classroom from '../../assets/classroom.jpg'
import classroom1 from '../../assets/classroom2.jpg'
import classroom2 from '../../assets/classroom3.jpg'
import classroom3 from '../../assets/classroom4.jpg'


---


<section class="relative mt-10 m-auto lg:mt-0 max-w-lg ">
    <Image src={classroom} alt="clase de ingles" format="webp" width={500} class="relative mx-auto rounded-3xl shadow-2xl duration-300 ease-out slideshow fade image border-2 border-darkgreen"/>
    <Image src={classroom1} alt="clase de ingles" format="webp" width={500} class="relative mx-auto rounded-3xl shadow-2xl duration-300 ease-out slideshow fade image border-2 border-darkgreen"/>
    <Image src={classroom2} alt="clase de ingles" format="webp" width={500} class="relative mx-auto rounded-3xl shadow-2xl duration-300 ease-out slideshow fade image border-2 border-darkgreen"/>
    <Image src={classroom3} alt="clase de ingles" format="webp" width={500} class="relative mx-auto rounded-3xl shadow-2xl duration-300 ease-out slideshow fade image border-2 border-darkgreen"/>
</section>

<style>
    .slideshow {
        display: none;
    }
    .fade {
        animation-name: fade;
        animation-duration: 2s;
    }

    @keyframes fade {
        from {
            opacity: 0.3;
            
            
        }
        to {
            opacity: 1;
        }
    }
</style>

<script>
    let slideIndex = 0;
    showSlides();

    function showSlides() {
        let i;
        let slides = document.getElementsByClassName("slideshow");
        let images = document.getElementsByClassName("image");
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        slideIndex++;
        if (slideIndex > slides.length) {
            slideIndex = 1;
        }
        for (i = 0; i < images.length; i++) {
            images[i].className = images[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        images[slideIndex - 1].className += " active";
        setTimeout(showSlides, 2000); // Change image every 2 seconds
    }
</script>
