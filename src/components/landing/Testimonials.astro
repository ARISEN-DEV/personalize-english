---
import testimonials from "../../config/testimonials.json";
import ReviewStars from "../assets/ReviewStars.astro";
---

<main
    class="flex flex-col items-center w-full max-h-80 gap-12 p-20 mb-8 md:flex-row md:mb-0 flex-between"
>
    {
        testimonials.map((testimonial) => (
            <section class="bg-greige w-96 mx-auto rounded-xl p-4 shadow-2xl">
                <p class="text-neutral-900 font-semibold">
                    <span class="text-lg font-bold text-green-700"> “</span>
                    {testimonial.testimonial}
                    <span class="text-lg font-bold text-green-700"> ”</span>
                </p>
                <div class="flex items-center mt-4">
                    <div class="flex flex-col justify-between ml-2">
                        <ReviewStars />
                        <span class="py-1 text-sm font-semibold text-darkgreen">
                            {testimonial.name}
                        </span>
                    </div>
                </div>
            </section>
        ))
    }
</main>
